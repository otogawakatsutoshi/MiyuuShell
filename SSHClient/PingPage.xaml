<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SSHClient.PingPage"
             Title="Ping Test">

    <ScrollView>
        <StackLayout Padding="20">
            <!-- IP またはホスト名入力フィールド -->
            <Entry x:Name="HostEntry" Placeholder="Enter IP or Hostname" />

            <!-- Ping 回数入力フィールド -->
            <Entry x:Name="PingCountEntry" Placeholder="Ping Count (e.g., 4)" Keyboard="Numeric" />

            <!-- タイムアウト時間入力フィールド -->
            <Entry x:Name="TimeoutEntry" Placeholder="Timeout (ms, e.g., 1000)" Keyboard="Numeric" />

            <!-- Ping 実行ボタン -->
            <Button Text="Ping" Clicked="OnPingButtonClicked" />

            <!-- 結果表示用ラベル -->
            <Label x:Name="ResultLabel" Text="Result will be shown here" />
        </StackLayout>
    </ScrollView>
    
</ContentPage>
