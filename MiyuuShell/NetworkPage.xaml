<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiyuuShell.NetworkPage"
             Title="Network Info">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Network Interfaces:" FontSize="18" />
            <Label x:Name="NetworkInfoLabel" FontSize="16" TextColor="Blue" />

            <Label Text="Public IP:" FontSize="18" />
            <Label x:Name="PublicIPLabel" FontSize="16" TextColor="Green" />

            <Button Text="Update" Clicked="OnUpdateButtonClicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

